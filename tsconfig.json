{
  "$schema": "https://json.schemastore.org/tsconfig",

  "compilerOptions": {
    "lib": ["es2020", "DOM"],
    "module": "commonjs",
    "target": "es2020",
    "rootDir": "./src",
    "outDir": "./build",

    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "types": ["node"],
  "include": ["src/**/*", "src/**/*.json"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/__mocks__/*.ts"
  ]
}
